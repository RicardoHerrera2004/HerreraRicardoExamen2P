<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HerreraRicardoExamen2P.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Image
                Source="gato.jpg"
                HeightRequest="350"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Label
                Text="Bienvenido a mi programa! Realizado por Ricardo Herrera"
                Style="{StaticResource Headline}"
                FontSize="40"
                SemanticProperties.HeadingLevel="Level1" />

            <Button
                x:Name="NavigationChistes"
                Text="Chistes"
                Clicked="NavigationChistes_Clicked"
                HorizontalOptions="Fill" />

            <Button
                x:Name="NavigationInfo"
                Text="Informacion"
                Clicked="NavigationInfo_Clicked"
                HorizontalOptions="Fill" />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
